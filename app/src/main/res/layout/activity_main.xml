<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/linear"
    tools:context=".MainActivity">
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/progressBar"
        android:visibility="gone"/>


    <TextView
        android:layout_marginTop="70dp"
        android:layout_marginBottom="15sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="@color/colorPrimary"
        android:textSize="23sp"
        android:textStyle="bold"
        android:id="@+id/entrar"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_gravity="center_horizontal"
        android:focusable="true"
        android:textColorHint="#000"
        android:textAlignment="center"
        android:layout_width="300sp"
        android:layout_height="70sp">

        <EditText
            android:windowSoftInputMode="adjustResize"
            android:id="@+id/email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:layout_gravity="center_horizontal"
            android:hint="Email"
            android:layout_marginTop="20dp"
            android:paddingTop="10dp"
            android:focusable="true"
            android:paddingBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/person"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:focusable="true"
        app:passwordToggleEnabled="true"
        android:textColorHint="#000"
        android:textAlignment="gravity"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <EditText
            android:windowSoftInputMode="adjustResize"
            android:id="@+id/senha"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/person"
            android:hint="Senha"
            android:password="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.417"
            app:layout_constraintWidth_percent=".8" />

    </com.google.android.material.textfield.TextInputLayout>
    <Space
        android:layout_width="0dp"
        android:layout_height="10dp"/>
    <TextView
        android:id="@+id/recuperarSenha"
        android:layout_width="250dp"
        android:layout_marginLeft="50dp"
        android:layout_height="30dp"
        android:gravity="right"
        android:text="Esqueci a minha senha."
        android:textSize="18dp"
        />
    <Space
        android:layout_width="20dp"
        android:layout_height="30dp"/>

    <TextView
        android:windowSoftInputMode="adjustResize"
        android:id="@+id/validaLogin"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/persoentrar"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Entrar"
        android:textColor="#fff"
        android:textSize="23sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="453dp" />


    <Space
        android:layout_width="20dp"
        android:layout_height="30dp"/>

    <TextView
        android:windowSoftInputMode="adjustResize"
        android:id="@+id/cadastro"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:text="@string/cadastre"
        android:textSize="17sp"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="453dp" />

    <Space
        android:layout_width="0dp"
        android:layout_height="30dp"/>

    <TextView
        android:windowSoftInputMode="adjustResize"
        android:id="@+id/vitrine"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@drawable/vitrine"
        android:text="SHOWCASE"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold"
        />




    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrain"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".78"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#fff"
            android:elevation="35dp"
            android:src="@drawable/iin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/fab_insta"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.278" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#fff"
            android:elevation="35dp"
            android:src="@drawable/www"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.204"
            app:layout_constraintStart_toEndOf="@id/fab_insta"
            app:layout_constraintVertical_bias="0.269" />

        <!--<androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
