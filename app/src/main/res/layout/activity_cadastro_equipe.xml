<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".cadastro_equipe">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="#4CAF50">
        <Button
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:id="@+id/voltar"
            android:background="@drawable/volta"/>
        <TextView
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:gravity="center"
            android:textSize="22sp"
            android:text="Cadastro de agremiação"/>
    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agremiação"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="20sp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/myTextInputLayout"
        android:layout_gravity="center_horizontal"
        android:focusable="true"
        android:textColorHint="#4CAF50"
        android:layout_width="270sp"
        android:textAlignment="gravity"
        android:layout_height="70sp">


        <EditText
            android:id="@+id/nomeEquipe"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:inputType="textCapWords|textCapSentences"
            android:layout_height="40sp"
            android:hint="Nome"
            android:textSize="20sp"
            android:gravity="left|center"
            android:background="@drawable/person"
            android:singleLine="true"
            android:textColor="#000000" />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/CNPJ"
        android:layout_gravity="center_horizontal"
        android:focusable="true"
        android:textColorHint="#4CAF50"
        android:layout_width="270sp"
        android:textAlignment="gravity"
        android:layout_height="70sp">

        <EditText
            android:id="@+id/CNPJEquipe"
            android:paddingLeft="10dp"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="CNPJ"
            android:textSize="20sp"
            android:gravity="left|center"
            android:background="@drawable/person"
            android:textColor="#000000" />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TILsenha"
        android:layout_gravity="center_horizontal"
        android:focusable="true"
        app:passwordToggleEnabled="true"
        android:textColorHint="#4CAF50"
        android:layout_width="270sp"
        android:textAlignment="gravity"
        android:layout_height="70sp">

        <EditText
            android:id="@+id/SenhaEquipe"
            android:paddingLeft="10dp"
            android:password="true"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="Crie a senha de acesso"
            android:textSize="20sp"
            android:gravity="left|center"
            android:background="@drawable/person"
            android:singleLine="true"
            android:textColor="#000000" />

    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Responsável"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="20sp"/>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/Responsavel"
        android:layout_gravity="center_horizontal"
        android:focusable="true"
        android:textColorHint="#4CAF50"
        android:layout_width="270sp"
        android:textAlignment="gravity"
        android:layout_height="70sp">

        <EditText
            android:id="@+id/NomeResponsavel"
            android:paddingLeft="10dp"
            android:inputType="textCapWords|textCapSentences"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="Nome"
            android:textSize="20sp"
            android:gravity="left|center"
            android:background="@drawable/person"
            android:singleLine="true"
            android:textColor="#000000" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/cpf"
        android:layout_gravity="center_horizontal"
        android:focusable="true"
        android:textColorHint="#4CAF50"
        android:layout_width="270sp"
        android:textAlignment="gravity"
        android:layout_height="70sp">

        <EditText
            android:id="@+id/cpfResponsavel"
            android:paddingLeft="10dp"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="CPF"
            android:textSize="20sp"
            android:gravity="left|center"
            android:background="@drawable/person"
            android:textColor="#000000" />
    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/contato"
        android:layout_gravity="center_horizontal"
        android:focusable="true"
        android:textColorHint="#4CAF50"
        android:layout_width="270sp"
        android:textAlignment="gravity"
        android:layout_height="70sp">

        <EditText
            android:id="@+id/telefone"
            android:paddingLeft="10dp"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="Telefone para contato"
            android:textSize="20sp"
            android:gravity="left|center"
            android:background="@drawable/person"
            android:textColor="#000000" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clique aqui para adicionar o escudo."
        android:textSize="22sp"
        android:gravity="center"
        android:textColor="#000"
        android:id="@+id/escudo"
/>
    <ImageView
        android:layout_marginLeft="30sp"
        android:layout_marginRight="65sp"
        android:layout_width="200sp"
        android:layout_height="120sp"
        android:scaleType="fitEnd"
        android:layout_gravity="center"
        android:id="@+id/foto">

    </ImageView>
    <TextView
        android:layout_marginBottom="15sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Finalizar Cadastro"
        android:textColor="@color/colorPrimary"
        android:textSize="23sp"
        android:textStyle="bold"
        android:id="@+id/finalizar"/>

        <TextView
            android:layout_marginBottom="15sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cadastro"
            android:textColor="@color/colorPrimary"
            android:textSize="23sp"
            android:textStyle="bold"
            android:id="@+id/text"/>
    </LinearLayout>
</ScrollView>